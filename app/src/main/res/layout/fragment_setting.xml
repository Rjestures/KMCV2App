<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlLanguage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone"
        android:background="@drawable/rectangle_white_round">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_language"
            android:layout_marginStart="@dimen/_10sdp"
            android:tint="@color/r_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/changeLanguage"
            android:layout_marginLeft="@dimen/_50sdp"
            android:textColor="@color/blackNew"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSync"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        android:background="@drawable/rectangle_white_round">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_sync"
            android:layout_marginLeft="@dimen/_10sdp"
            android:tint="@color/r_color"/>

        <TextView
            android:id="@+id/tvSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/sync"
            android:layout_marginStart="@dimen/_50sdp"
            android:textColor="@color/blackNew"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/tvLastSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:text="@string/lastSynced"
            android:layout_toEndOf="@+id/tvSync"
            android:textColor="@color/grey"
            android:textSize="@dimen/_8sdp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:elevation="@dimen/_5sdp"
        android:background="@drawable/rectangle_white_round">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_password"
            android:layout_marginLeft="@dimen/_10sdp"
            android:tint="@color/r_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/changePassword"
            android:layout_marginLeft="@dimen/_50sdp"
            android:textColor="@color/blackNew"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_20sdp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:textColor="@color/oo_color"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>