<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="DuplicateIds">

    <include
        android:id="@+id/header"
        layout="@layout/inflate_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp" />

    <LinearLayout
        android:id="@+id/llInform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/header"
        android:layout_above="@+id/rlBottom"
        android:layout_margin="@dimen/_10sdp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_second" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:text="@string/pleaseInform"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_10sdp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:srcCompat="@drawable/circle_red" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:gravity="center_vertical"
                    android:text="@string/bloodPressure"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:srcCompat="@drawable/circle_red" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:gravity="center_vertical"
                    android:text="@string/uterusExamination"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:srcCompat="@drawable/circle_red" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/checkEpisiotomyStitches"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:srcCompat="@drawable/circle_red" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:gravity="center_vertical"
                    android:text="@string/otherObservation"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/soThatExamine"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/svFindings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@+id/rlBottom"
        android:background="@color/white"
        android:layout_margin="@dimen/_10sdp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/llAssessment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_nurse"
                    android:tint="@color/r_color"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/enteredByNurse"
                    android:layout_marginLeft="@dimen/_28sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_8sdp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_65sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_grey_round_new">

                    <Spinner
                        android:id="@+id/spinnerEnteredByNurse"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:popupBackground="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_down_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_12sdp"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/motherBloodPressure"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/oo_color"
                android:layout_marginTop="@dimen/_10sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/systolic"
                        android:textSize="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/blackNew"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_grey_round_new">

                        <EditText
                            android:id="@+id/etSystolic"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="match_parent"
                            android:textColor="@color/blackNew"
                            android:inputType="numberDecimal"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_9sdp"
                            android:background="@null"
                            android:maxLength="3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="@string/mmHg"
                            android:textColor="@color/blackNew"
                            android:textSize="@dimen/_8sdp"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/diastolic"
                        android:textSize="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/blackNew"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_grey_round_new">

                        <EditText
                            android:id="@+id/etDiastolic"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="match_parent"
                            android:textColor="@color/blackNew"
                            android:inputType="numberDecimal"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:textSize="@dimen/_9sdp"
                            android:background="@null"
                            android:maxLength="3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="@string/mmHg"
                            android:textColor="@color/blackNew"
                            android:textSize="@dimen/_8sdp"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pulseRate"
                        android:textSize="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/blackNew"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_grey_round_new">

                        <EditText
                            android:id="@+id/etPulse"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="match_parent"
                            android:textColor="@color/blackNew"
                            android:inputType="numberDecimal"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:background="@null"
                            android:textSize="@dimen/_9sdp"
                            android:maxLength="3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="@string/min"
                            android:textColor="@color/blackNew"
                            android:textSize="@dimen/_8sdp"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/uterusExamination"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/oo_color"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/motherUterineTone"
                    android:textColor="@color/blackNew"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_8sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_100sdp">

                    <RelativeLayout
                        android:id="@+id/rlSoft"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_30sdp">

                        <ImageView
                            android:id="@+id/ivSoft"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:srcCompat="@drawable/ic_check_box"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tvSoft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/softRelaxed"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_2sdp"
                            android:layout_toRightOf="@+id/ivSoft"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8sdp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlHard"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_30sdp">

                        <ImageView
                            android:id="@+id/ivHard"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:srcCompat="@drawable/ic_check_box"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tvHard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/hard"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_2sdp"
                            android:layout_toRightOf="@+id/ivHard"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8sdp"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/oo_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/axillaryTemperature"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/temperature"
                    android:textColor="@color/blackNew"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/_8sdp"/>

                <RelativeLayout
                    android:id="@+id/rlTemp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_120sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_grey_round_new">

                    <EditText
                        android:id="@+id/etTemperature"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/blackNew"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_9sdp"
                        android:maxLength="6"
                        android:layout_toLeftOf="@+id/spinnerTempUnit"/>

                    <Spinner
                        android:id="@+id/spinnerTempUnit"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:popupBackground="@color/white" />

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_down_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_12sdp"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otherObservationComments"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/oo_color"/>

            <EditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:textColor="@color/blackNew"
                android:gravity="top|left"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/rectangle_grey_round_new"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rlNext"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@mipmap/circle_shadow"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:clipToPadding="false"
            android:elevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:background="@drawable/circle_teal"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    app:srcCompat="@drawable/ic_next"
                    android:layout_centerInParent="true"
                    android:tint="@color/white"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPrevious"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@mipmap/circle_shadow"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:clipToPadding="false"
            android:elevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:background="@drawable/circle_teal"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    app:srcCompat="@drawable/ic_next"
                    android:rotation="180"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="@dimen/_168sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llHelpNew"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    app:srcCompat="@drawable/ic_help"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/help"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_8sdp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlStuck"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/white"
                android:layout_marginRight="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_warning"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/iMStuckPleaseHelpMe"
                    android:textColor="@color/blackNew"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_7sdp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginRight="@dimen/_20sdp"/>

            <RelativeLayout
                android:id="@+id/rlOwn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/white"
                android:layout_marginRight="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_play"
                    android:tint="@color/green"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/learnOnMyOwn"
                    android:textColor="@color/blackNew"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_7sdp"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>