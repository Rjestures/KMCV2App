<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:weightSum="4">

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/lightgreyback"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_7sdp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/lightgreyback"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_7sdp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/lightgreyback"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rlAction"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_7sdp"
                    android:textColor="@color/black"
                    android:gravity="center"/>

            </RelativeLayout>


            <ImageView

                android:id="@+id/ivStatus"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:srcCompat="@drawable/ic_sad_smily"
                android:layout_toRightOf="@+id/rlAction"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_3sdp"
                />

            <TextView
                android:id="@+id/tvReport"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:layout_toRightOf="@+id/ivStatus"
                android:textSize="@dimen/_6sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_teal_round_new"
                android:gravity="center"/>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/lightgreyback"/>

        <TextView
            android:id="@+id/tvBy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_7sdp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/lightgreyback"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/lightgreyback"/>

</LinearLayout>
