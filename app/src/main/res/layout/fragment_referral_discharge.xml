                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_down_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_12sdp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        app:srcCompat="@drawable/ic_second"
                        android:tint="@color/r_color"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/nurseSignature"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="@dimen/_minus3sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_8sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginLeft="@dimen/_100sdp"
                        android:background="@drawable/rectangle_grey_round_new" >

                        <com.github.gcacace.signaturepad.views.SignaturePad
                            android:id="@+id/signaturePad"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:penColor="@android:color/black"/>

                        <ImageView
                            android:id="@+id/ivClear"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            app:srcCompat="@drawable/ic_clear"
                            android:tint="@color/r_color"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/_2sdp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        app:srcCompat="@drawable/ic_van_01"
                        android:tint="@color/r_color"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/transportation"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="@dimen/_minus3sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_8sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/rectangle_grey_round_new">

                        <Spinner
                            android:id="@+id/spinnerTransportation"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:popupBackground="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_down_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_12sdp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        app:srcCompat="@drawable/ic_type_admission"
                        android:tint="@color/r_color"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/dischargeNotes"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:textColor="@color/black"
                        android:lineSpacingExtra="@dimen/_minus3sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_8sdp"/>

                    <EditText
                        android:id="@+id/etDischargeNotes"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:padding="@dimen/_5sdp"
                        android:gravity="top|left"
                        android:text=""
                        android:layout_marginLeft="@dimen/_100sdp"
                        android:inputType="textCapWords"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLength="256"
                        android:background="@drawable/rectangle_grey_round_new"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rlNext"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@mipmap/circle_shadow"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:clipToPadding="false"
            android:elevation="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/rlCircle"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:background="@drawable/circle_teal"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    app:srcCompat="@drawable/ic_next"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center"
            android:background="@drawable/rectangle_teal_round"
            android:text="@string/submit"
            android:textAllCaps="true"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/_2sdp"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:elevation="@dimen/_3sdp"/>

        <RelativeLayout
            android:id="@+id/rlPrevious"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@mipmap/circle_shadow"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:clipToPadding="false"
            android:elevation="@dimen/_10sdp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:background="@drawable/circle_teal"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    app:srcCompat="@drawable/ic_next"
                    android:rotation="180"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>