<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/header"
        layout="@layout/inflate_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/header">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        app:srcCompat="@drawable/ic_address"
                        android:tint="@color/r_color"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/selectDistrict"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:textColor="@color/blackNew"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_8sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/rectangle_grey_round_new">

                        <Spinner
                            android:id="@+id/spinnerDistrict"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_5sdp"
                            android:popupBackground="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_down_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_12sdp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        app:srcCompat="@drawable/ic_organisation"
                        android:tint="@color/r_color"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/nameOfFacility"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:textColor="@color/blackNew"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_8sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/rectangle_grey_round_new">

                        <Spinner
                            android:id="@+id/spinnerFacility"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_5sdp"
                            android:popupBackground="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_down_arrow"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_12sdp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        app:srcCompat="@drawable/ic_organisation"
                        android:tint="@color/r_color"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/selectToSearch"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:textColor="@color/blackNew"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_8sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_100sdp"
                        android:weightSum="3">

                        <RelativeLayout
                            android:id="@+id/rlName"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp">

                            <ImageView
                                android:id="@+id/ivName"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                app:srcCompat="@drawable/ic_check_box"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/motherGuardianName"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ivName"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_minus3sdp"
                                android:textSize="@dimen/_7sdp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlDelDate"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_3sdp">

                            <ImageView
                                android:id="@+id/ivDelDate"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                app:srcCompat="@drawable/ic_check_box"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="@string/deliveryDate"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_toRightOf="@+id/ivDelDate"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_minus3sdp"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:textSize="@dimen/_7sdp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlHRN"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_3sdp">

                            <ImageView
                                android:id="@+id/ivHRN"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                app:srcCompat="@drawable/ic_check_box"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="@string/hospitalRegistrationNumber"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_toRightOf="@+id/ivHRN"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_minus3sdp"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:textSize="@dimen/_7sdp"/>


                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/ivSearchCriteria"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        app:srcCompat="@drawable/ic_mother"
                        android:tint="@color/r_color"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tvSearchCriteria"
                        android:layout_width="@dimen/_55sdp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/motherGuardianName"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:textColor="@color/blackNew"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_8sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/rectangle_grey_round_new">

                        <EditText
                            android:id="@+id/etData"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/blackNew"
                            android:fontFamily="@font/poppins_regular"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_5sdp"/>

                        <ImageView
                            android:id="@+id/ivDeliveryDate"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            app:srcCompat="@drawable/ic_calender"
                            android:tint="@color/r_color"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/_10sdp"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llHeader"
                android:id="@+id/recyclerView"/>

            <TextView
                android:id="@+id/tvNoRecord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llHeader"
                android:text="@string/noDataFound"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:visibility="gone"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/blackNew"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlCircle"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/circle_teal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ivPlus"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            app:srcCompat="@drawable/ic_search"
            android:layout_centerInParent="true"
            android:tint="@color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:elevation="@dimen/_5sdp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="@dimen/_168sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llHelpNew"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    app:srcCompat="@drawable/ic_help"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/help"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_8sdp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlStuck"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/white"
                android:layout_marginRight="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_warning"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/iMStuckPleaseHelpMe"
                    android:textColor="@color/blackNew"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_7sdp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginRight="@dimen/_20sdp"/>

            <RelativeLayout
                android:id="@+id/rlOwn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:background="@color/white"
                android:layout_marginRight="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_play"
                    android:tint="@color/green"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/learnOnMyOwn"
                    android:textColor="@color/blackNew"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/_7sdp"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
